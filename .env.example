# Database (used by backend when running via Docker)
DATABASE_URL=postgresql+psycopg://app:app@db:5432/app

# LLM provider selection
# fake = deterministic provider used for CI and local development
# openai = optional provider for live smoke tests (later)
LLM_PROVIDER=fake

# Optional (leave empty unless you explicitly want live LLM calls)
OPENAI_API_KEY=
